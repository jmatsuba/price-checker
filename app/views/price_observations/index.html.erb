<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-8">

    <h1>Listing Price Observations</h1>

    <table class="table table-striped"> 
      <thead>
        <tr>
          <th>Item</th>
          <th>User</th>
          <th>Store</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @price_observations.each do |price_observation| %>
          <tr>
            <td><%= price_observation.item.display_name %></td>
            <td><%= price_observation.user.name %></td>
            <td><%= price_observation.store.display_name %></td>
            <td><%= price_observation.price %></td>
            <td><%= link_to 'Show', price_observation %></td>
            <td><%= link_to 'Edit', edit_price_observation_path(price_observation) %></td>
            <td><%= link_to 'Destroy', price_observation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>
